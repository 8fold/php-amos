{
  "name": "8fold/php-amos",
  "description": "Not a content management system.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^8.0",
    "8fold/commonmark-fluent-markdown": "*",
    "8fold/php-html-builder": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^0.12",
    "pestphp/pest": "^1.20",
    "psr/log": "^1.0.1"
  },
  "autoload": {
    "psr-4": {
      "Eightfold\\Amos\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "prefer-stable": true,
  "scripts": {
    "prod": "@production",
    "production": ["@style", "@stan", "@test"],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml -p ./src",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/pest"
  }
}
